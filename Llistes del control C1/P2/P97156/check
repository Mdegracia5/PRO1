g++ program.cc -o program.x
./program.x < sample-1.inp > output
d=$(diff output sample-1.cor) 
if [ "$d" == "" ]; then
    echo "sample-1 OK"
else
    echo "sample-1 NO"
fi
./program.x < sample-2.inp > output
d=$(diff output sample-2.cor) 
if [ "$d" == "" ]; then
    echo "sample-2 OK"
else
    echo "sample-2 NO"
fi
./program.x < sample-3.inp > output
d=$(diff output sample-3.cor) 
if [ "$d" == "" ]; then
    echo "sample-3 OK"
else
    echo "sample-3 NO"
fi
